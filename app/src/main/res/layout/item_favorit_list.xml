<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/input_style"
    android:layout_margin="16dp"
    android:padding="6dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        app:cardCornerRadius="10dp"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/mealImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/teal_color_dark"
                android:id="@+id/nameDetailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/TextTitle"
                android:textSize="18sp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_weight="1"
                android:textStyle="bold"
                tools:text="@tools:sample/cities"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_grade_black_24dp"/>
                <TextView
                    android:textColor="@color/teal_color_dark"
                    android:id="@+id/categoryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    style="@style/TextTitle"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:text="@tools:sample/first_names"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home_black_24dp"/>
                <TextView
                    android:textColor="@color/teal_color_dark"
                    android:id="@+id/countryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    style="@style/TextTitle"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:text="@tools:sample/first_names"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addTOPlanButton"
                android:gravity="center"

                android:background="@drawable/button_calender_effect"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Add to plan"
                android:drawableStart="@drawable/ic_plane"
                android:padding="3dp"
                android:textColor="@color/teal_color_dark"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/addToFavoriteButton"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_weight=".25"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
