<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_height="270dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/itemHome"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/thumnail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                tools:src="@tools:sample/avatars" />

            <CheckBox
                android:id="@+id/fav_ceheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:button="@drawable/favorite_effect"
                android:checked="false"
                android:clickable="true" />
        </RelativeLayout>
        <TextView
            android:textColor="@color/teal_color_dark"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextTitle"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/search_title"
/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addTOPlanButton"
            android:gravity="center"
            android:background="@drawable/button_calender_effect"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Add To Your Plan"
            android:drawableStart="@drawable/ic_plane"
            android:padding="3dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>